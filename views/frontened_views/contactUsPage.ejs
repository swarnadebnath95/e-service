<section style="padding-top: 80px;">
    <div class="container">
        <div class="heading_container">
            <h4 style="font-weight: 600;color: rgb(27, 27, 119);">
                Contact Us
            </h4>
        </div>
        <div class="row">
            <div class="col-md-6">

                <form action="/frontened/contact" method="POST">
                    <!-- Name Field -->
                    <div class="name">
                        <label for="name" class="form-label" style="color: blue;">Name:</label><br>
                        <input type="text" name="name" id="name" class="inputarea" placeholder="Enter your name"
                           style="width: 500px;" required>
                    </div>

                    <!-- Email Field -->
                    <div class="name1">
                        <label for="email" class="form-label" style="color: blue;">Email:</label><br>
                        <input type="email" name="email" id="email" class="inputarea" placeholder="Enter your email"
                        style="width: 500px;" required>
                    </div>

                    <!-- Phone Field -->
                    <div class="name2">
                        <label for="phone" class="form-label" style="color: blue;">Phone No:</label><br>
                        <input type="tel" name="phone" id="phone" class="inputarea"
                        style="width: 500px;" placeholder="Enter your phone number" required>
                    </div>

                    <!-- Message -->
                    <div class="name6">
                        <label for="message" class="form-label" style="color: blue;">Your Message:</label><br>
                        <textarea name="message" id="message" class="inputtextarea2"
                        style="width: 500px;"  placeholder="Enter your message" rows="4" cols="50" required></textarea>
                    </div>

    
                    <!-- Submit Button -->
                    <button type="submit" style="margin-top: 20px;width: 100px;height: 40px;border-color: rgb(60, 60, 182);color: blue;">Submit</button>
                </form>

            </div>
            <div class="col-md-6">
              
                    <div>
                        <img src="https://www.shutterstock.com/image-photo/hand-show-icon-address-phone-600nw-2475999141.jpg" alt="">
                    </div>
              
            </div>
        </div>
    </div>
