            </a>

            <!-- <a href="/frontened/account" class="logincus">
                <i class="fa fa-sign-in" aria-hidden="true" style="color: rgb(230, 93, 43);"></i>
                <span>
                    login
                </span>
            </a> -->

        </div>
    </nav>
</div>


<section style="padding-top: 80px;">
    <div class="container">

        <% if (successMessage && successMessage.length> 0) { %>
            <div class="alert alert-success" id="flash-message">
                <%= successMessage %>
            </div>
            <% } %>
                <% if (errorMessage && errorMessage.length> 0) { %>
                    <div class="alert alert-danger"
                        id="flash-message">
                        <%= errorMessage %>
                    </div>
                    <% } %>

        <div class="row">

            <div class="col-md-6">

                <div class="heading_container">
                    <h4 style="font-weight: 600;color: rgb(8, 8, 49);">
                        Profile Details
                    </h4>
                </div>

                <form action="/frontened/update/<%=editData._id%>" method="post">
                    <!-- Name Field -->
                    <div class="name">
                        <label for="name" class="form-label" style="color: rgb(56, 56, 189);font-size: 15px;">Name:<span
                                style="color: rgb(68, 51, 143);margin-left: 5px;">
                                <input type="text" name="name" id="name" class="viewprofilename"
                                    placeholder="Enter your name" value="<%=editData.name%>" required>
                            </span></label><br>

                    </div>

                    <!-- Email Field -->
                    <div class="name1">
                        <label for="email" class="form-label"
                            style="color: rgb(56, 56, 189);font-size: 15px;">Email:<span
                                style="color: rgb(68, 51, 143);margin-left: 5px;">
                                <input type="email" name="email" id="name" class="viewprofilename"
                                    placeholder="Enter your name" value="<%=editData.email%>" required>
                            </span></label><br>

                    </div>

                    <!-- Phone Field -->
                    <div class="name2">
                        <label for="phone" class="form-label" style="color: rgb(56, 56, 189);font-size: 15px;">Phone
                            No:<span style="color: rgb(68, 51, 143);margin-left: 5px;">
                                <input type="number" name="phone" id="name" class="viewprofilename"
                                    placeholder="Enter your name" value="<%=editData.phone%>" required>
                            </span></label><br>

                    </div>

                    <!-- Message -->
                    <div class="name6">
                        <label for="message" class="form-label"
                            style="color: rgb(56, 56, 189);font-size: 15px;">Address:<span
                                style="color: rgb(68, 51, 143);margin-left: 5px;">
                                <input type="text" name="address" id="name" class="viewprofilename"
                                    placeholder="Enter your name" value="<%=editData.address%>" required>
                            </span></label><br>

                    </div>


                    <!-- Submit Button -->
                    <button type="submit" class="update">Update Profile</button>
                </form>

            </div>

            <div class="col-md-6">

                <div>
                    <img src="https://www.salesforce.com/ca/blog/wp-content/uploads/sites/12/2023/10/Every-Task-a-Customer-Service-Rep-Must-Do-opengraph.png"
                        alt="" style="height: 300px;">
                </div>

            </div>

        </div>
    </div>
</section>

<script>
    setTimeout(() => {
        const flashMessage = document.getElementById('flash-message');
        if (flashMessage) {
            flashMessage.style.display = 'none';
        }
    }, 3000);
</script>