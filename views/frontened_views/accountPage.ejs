<%- include('./common/head') %>


    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />


        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
            integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
            crossorigin="anonymous"></script>
        <title>Document</title>

        <style>
            .container {
                overflow: hidden;
                text-align: center;
            }

            .img-style img {
                width: 500px;
                height: auto;
                transition: transform 2s ease-in-out;
            }

            .img-style img:hover {
                transform: scale(1.1) rotate(10deg);
                /* Zoom and rotate on hover */
            }

            @keyframes fadeIn {
                from {
                    opacity: 0;
                    transform: translateY(20px);
                }

                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }

            .img-style img {
                animation: fadeIn 2s ease-in-out;
                /* Fade-in animation */
            }




            .account {
                background-color: rgb(197, 197, 214);
                height: 750px;
            }

            .member {
                margin-left: 100px;
                font-size: 20px;
            }

            .headd {
                margin-left: 100px;
                padding-top: 40px;
                font-size: 20px;
                font-weight: bolder;
            }

            .navstyle {
                background-color: black;
                height: 50px;
            }

            .navoption {
                padding-top: 10px;
            }

            .calling {
                color: white;
                text-decoration: none;
                margin-left: 30px;
            }

            .email {
                color: white;
                text-decoration: none;
                margin-left: 360px;
            }

            .logincus {
                color: white;
                text-decoration: none;
                margin-left: 460px;
            }

            .inputpasswod {
                background-color: rgb(229, 229, 241);
                margin-left: 20px;
                width: 450px;
                height: 40px;
                border-top-color: aliceblue;
                border-bottom-color: aliceblue;
                border-right-color: aliceblue;
                border-left-color: aliceblue;
            }

            .closebtn {
                width: 80px;
                border-color: rgb(16, 16, 214);
                color: rgb(42, 42, 184);
                font-weight: 600;
            }

            .closebtn:hover {
                border-color: rgb(45, 45, 168);
                color: rgb(255, 255, 255);
                background-color: rgb(45, 45, 168);
            }

            .updbtn {
                border-color: rgb(16, 16, 214);
                color: rgb(42, 42, 184);
                font-weight: 600;
            }

            .updbtn:hover {
                border-color: rgb(45, 45, 168);
                color: rgb(255, 255, 255);
                background-color: rgb(45, 45, 168);
            }

            .accountt {
                margin-top: 40px;
                margin-left: 100px;
                font-size: 20px;
                font-weight: 700;
            }

            .list {
                list-style: none;
                margin-left: 70px;
                margin-top: 30px;
                color: black;
            }

            .logout {
                margin-bottom: 30px;
                margin-left: 100px;
                margin-top: 20px;
                width: 1200px;
                height: 40px;
                border-bottom-color: bisque;
                border-top-color: rgb(214, 220, 236);
                border-right-color: rgb(202, 209, 230);
                border-left-color: rgb(214, 220, 236);
                font-weight: 600;
                color: rgb(70, 70, 184);
            }

            .logout:hover {
                border-bottom-color: bisque;
                border-top-color: rgb(214, 220, 236);
                border-right-color: rgb(202, 209, 230);
                border-left-color: rgb(214, 220, 236);
                background-color: rgb(76, 76, 190);
                color: white;
            }
            .log{
                color: rgb(52, 52, 185);
            }
            .log:hover{
                color: white;
            }
        </style>

    </head>

    <body>

        <div>
            <nav class="navstyle">
                <div class="navoption">
                    <a href="" class="calling">
                        <i class="fa fa-phone" aria-hidden="true" style="color: rgb(230, 93, 43);"></i>
                        <span>
                            Call : +01 123455678990
                        </span>
                    </a>
                    <a href="" class="email">
                        <i class="fa fa-envelope" aria-hidden="true" style="color: rgb(230, 93, 43);"></i>
                        <span>
                            Email : demo@gmail.com
                        </span>
                    </a>

                    <a href="/frontened/account" class="logincus">
                        <i class="fa fa-sign-in" aria-hidden="true" style="color: rgb(230, 93, 43);"></i>
                        <span >
                           <a href="/frontened/dashboard" style="color: white;text-decoration: none;"> back</a>
                        </span>
                    </a>

                </div>
            </nav>
        </div>

        <div class="account">

            <% if (successMessage && successMessage.length>
            0) { %>
            <div class="alert alert-success"
                id="flash-message">
                <%= successMessage %>
            </div>
            <% } %>
                <% if (errorMessage &&
                    errorMessage.length> 0) { %>
                    <div class="alert alert-danger"
                        id="flash-message">
                        <%= errorMessage %>
                    </div>
                    <% } %>

            <div>
                <h4 class="headd">Hello <span style="color: rgb(50, 50, 206);">
                    <%= uData.name%>
                    </span></h4>
                <!-- <h4 class="member">Premimum member</h4> -->

                <div class="container overflow-hidden text-center">
                    <div class="img-style">
                        <img class="animate__animated animate__bounce"
                            src="https://t4.ftcdn.net/jpg/03/03/49/75/360_F_303497515_ZHOwfTtuo5sYpAeoqWRZnkXZNZDKZeMz.jpg"
                            alt="Animated Image">
                    </div>
                </div>

            </div>

            <div>

               
                <div>
                    <h4 class="accountt">Account Setting</h4>

                </div>

                <div>
                    <ul class="list">
                        <li><i class="fa fa-home" aria-hidden="true" style="color: rgb(207, 72, 23);"></i><span
                                style="margin-left: 10px;"><a href="/frontened/viewprofile"
                                    style="color: black;text-decoration:none;">View Profile</a></span></li>

                        <li><i class="fa fa-sign-in" aria-hidden="true" style="color: rgb(207, 72, 23);"></i><span
                                type="button" class="" data-bs-toggle="modal" data-bs-target="#exampleModal"
                                style="margin-left: 10px;">
                                <a id="<%= uData.id %>">Update Passwword</a>
                            </span>
                        </li>

                        <!-- Modal -->
                        <div class=" modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                            aria-hidden="true">
                            <form action="/frontened/update_password" method="POST">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h3 class="modal-title fs-5" id="exampleModalLabel"
                                                style="color: rgb(78, 78, 168);">Update Your Password
                                            </h3>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>

                                        <input type="password" class="inputpasswod" placeholder="Enter New Password"
                                            name="password" />

                                        <div class="modal-footer">
                                            <button type="button" class="closebtn"
                                                data-bs-dismiss="modal">Close</button>
                                            <button type="submit" class="updbtn">Update Password</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>



                        <li>
                            <i class="fa fa-envelope" aria-hidden="true" style="color: rgb(207, 72, 23);"></i> <span
                                type="button" class="" data-bs-toggle="modal"
                                data-bs-target="#exampleModal<%= uData.id %>" style="margin-left: 6px;">
                                <a id="<%= uData.id %>">Update Mail Id</a>
                            </span>
                        </li>
                        <!-- Modal -->
                        <div class="modal fade" id="exampleModal<%= uData.id %>" tabindex="-1"
                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <form action="/frontened/update_mailId" method="POST">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h3 class="modal-title fs-5" id="exampleModalLabel"
                                                style="color: rgb(78, 78, 168);">Update Your Email ID
                                            </h3>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>

                                        <input type="email" class="inputpasswod" placeholder="Enter New Mail ID"
                                            name="email" />

                                        <div class="modal-footer">
                                            <button type="button" class="closebtn"
                                                data-bs-dismiss="modal">Close</button>
                                            <button type="submit" class="updbtn">Update Mail ID</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>


                        <li><i class="fa fa-sign-in" aria-hidden="true" style="color: rgb(207, 72, 23);"></i><span
                                style="margin-left: 10px;"><a href="/frontened/allcompleteraisetickets"
                                    style="color: black;text-decoration: none;">View all Raise Complete
                                    Tickets</a></span></li>

                        <li><i class="fa fa-sign-in" aria-hidden="true" style="color: rgb(207, 72, 23);"></i><span
                                style="margin-left: 10px;"><a href="/frontened/allpendingraisetickets"
                                    style="color: black;text-decoration: none;">view All Raise Pending
                                    Services</a></span></li>
                        <li><i class="fa fa-sign-in" aria-hidden="true" style="color: rgb(207, 72, 23);"></i><span
                                style="margin-left: 10px;"><a href="/frontened/review" style="color: black;text-decoration: none;">Give
                                    Review About Service</a>
                            </span></li>
                    </ul>

                </div>
                <%if(!data.name){%>

                <button type="submit" class="logout"><a href="/frontened/loginpage" style="text-decoration: none;" class="log">LOGIN</a></button>
                <%}else{%>
                <button type="submit" class="logout"><a href="/frontened/logout" style="text-decoration: none;" class="log">LOGOUT</a></button>

                <%}%>

            </div>



        </div>
    </body>

    </html>

    <%- include('./common/footer') %>

    <script>
        $(document).ready(function () {
            setTimeout(function () {
                $('#flash-message').fadeOut('slow');
            }, 3000); // 5 seconds
        });
    </script>