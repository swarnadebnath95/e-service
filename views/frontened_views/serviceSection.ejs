<section class="professional_section layout_padding">
    <div class="container">
        <div class="row">
            <% if (serviceDashboardData && serviceDashboardData.length > 0) { %>
                <% serviceDashboardData.forEach(function(item) { 
                    if (item.status != 0) { %>
                        <div class="col-md-6">
                            <div class="img-box">
                                <img src="/<%= item.image %>" alt="<%= item.title %>" class="imagee">
                            </div>
                        </div>
                            <div class="col-md-6 ">
                                <div class="detail-box">
                                    <h2>
                                        <%= item.title %>
                                    </h2>
                                    <p>
                                        <%= item.description %>
                                    </p>
                
                                </div>
                            </div>
                    <% } 
                }); %>
            <% } else { %>
                <h1 style="text-align: center; color: gray;">No professional services available</h1>
            <% } %>
            
        </div>
    </div>
</section>



<section class="service_section layout_padding">
    <div class="container ">
        <div class="heading_container heading_center">
            <h2> Our Services </h2>
        </div>
        <div class="row">
    
            <% if (cdata && cdata.length > 0) { %>
                <% cdata.forEach(function(item) { 
                    if (item.status != 0) { %>
                        <div class="col-sm-6 col-md-4 mx-auto">
                            <div class="box">
                                <div class="">
                                    <img src="/<%= item.image %>" alt="<%= item.name %>" class="img-fluid">
                                </div>
                                <div class="detail-box">
                                    <h5><%= item.name %></h5>
                                    <p><%= item.description %></p>
                                </div>
                            </div>
                        </div>
                    <% } 
                }); %>
            <% } else { %>
                <h1 style="text-align: center; color: gray;">No services available</h1>
            <% } %>
            
   
        
        </div>

        <div class="heading_container heading_center" style="padding-top: 30px;">
            <a href="/frontened/applyForService"
                style="background-color: rgb(240, 161, 43);height: 60px;width: 180px;color: aliceblue;padding-top: 15px;font-weight: 700;">
                Apply For Service
            </a>
        </div>

    </div>
</section>


